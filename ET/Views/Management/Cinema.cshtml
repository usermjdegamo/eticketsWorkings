@model IEnumerable<ET.Models.Cinema>
@{
    ViewBag.Title = "Cinema";
}

<div class="row">
    <div class="col-md-8 offset-md-2">

        <table class="table">
            <thead>
                <tr class="text-center">
                    <th>@Html.DisplayNameFor(model => model.logo)</th>
                    <th>@Html.DisplayNameFor(model => model.name)</th>
                    <th>@Html.DisplayNameFor(model => model.description)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="align-middle">
                            <img class="rounded-circle" src="@item.logo" alt="@item.name" style="max-width: 150px" />
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.description)
                        </td>

                        <td class="align-middle">
                            <a class="btn btn-outline-primary edit" onclick="location.href='@Url.Action("CinemaEdit", "Management", new { id = item.id })'" data-id="@item.id"><i class="bi bi-pencil-square"></i>Edit </a> |
                            <a class="btn btn-outline-info" onclick="location.href='@Url.Action("CinemaDetail", "Management", new { id = item.id })'" data-id="@item.id"><i class="bi bi-eye"></i>Details </a> |
                            <a class="btn btn-danger text-white" onclick="location.href='@Url.Action("CinemaDelete", "Management", new { id = item.id })'" data-id="@item.id"><i class="bi bi-trash"></i>Delete </a>
                        </td>

                    </tr>
                }
            </tbody>
        </table>
        <div>
            <a class="btn btn-success text-white" onclick="location.href='@Url.Action("CinemaAdd", "Management")'"><i class="bi bi-pencil-square"></i>Add a new Cinema</a>
        </div>
    </div>

</div>
<script>



</script>



