@model IEnumerable<ET.Models.Cinema>
@{
    ViewBag.Title = "Cinema";
}

<h2>Add cinemas here!</h2>
@using (Html.BeginForm("Cinema", "Management", FormMethod.Post))
{
    <div>
        <input type="text" required name="logo" placeholder="logo link" /><br />
        <input type="text" required name="name" placeholder="cinema name" /><br />
        <input type="text" required name="description" placeholder="cinema description" /><br />
        <input type="submit" />
    </div>
}

<h2>List of all producers here</h2>
<table id="datatable-fixed-header" class="table table-striped table-bordered" style="width:90%;">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.id)</th>
            <th>@Html.DisplayNameFor(model => model.logo)</th>
            <th>@Html.DisplayNameFor(model => model.name)</th>
            <th>@Html.DisplayNameFor(model => model.description)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.id</td>
                <td>@item.logo</td>
                <td>@item.name</td>
                <td>@item.description</td>
            </tr>
        }
    </tbody>
</table>




