
@{
    ViewBag.Title = "ProducerAdd";
}

<div class="row text">
    <div class="col-md-8 offset-2">
        <p>
            <h1>Add a New Producer</h1>
        </p>
        <div class="row">
            <div class="col-md-8 offset-2">
                @using (Html.BeginForm("ProducerAdd", "Management", FormMethod.Post))
                {
                    <div class="form-group text-center">
                        <img id="ProfilePicturePreview" class="border-info rounded-circle" style="max-width: 150px" />
                    </div>
                    <div class="form-group">
                        <label for="profileURL" class="control-label"></label>
                        <input type="text" required name="profileURL" placeholder="Producer picture link" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="fullName" class="control-label"></label>
                        <input type="text" required name="fullName" placeholder="Producer Name" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label for="bio" class="control-label"></label>
                        <input type="text" required name="bio" placeholder="Bio" class="form-control" />
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Add" class="btn btn-outline-success float-right" />
                    </div>
                }
            </div>
        </div>
    </div>
</div>


